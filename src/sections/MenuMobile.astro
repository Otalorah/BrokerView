---
import ChartSVG from "@components/svg/ChartSVG.astro";
import HouseSVG from "@components/svg/HouseSVG.astro";
import PiggySVG from "@components/svg/PiggySVG.astro";
import UserSVG from "@components/svg/UserSVG.astro";

import "@styles/link-pages-svg.css";
---

<div id="background__menu-mobile" transition:persist></div>
<aside id="menu-mobile" transition:persist>
    <ul>
        <HouseSVG />
        <ChartSVG />
        <PiggySVG />
        <UserSVG />
    </ul>
</aside>

<style>
    #background__menu-mobile {
        position: fixed;
        display: none;
        width: 100%;
        height: 100vh;
        z-index: 190;
        backdrop-filter: blur(5px);

        &.appear {
            display: flex;
        }
        &.appear ~ #menu-mobile {
            display: flex;
        }
    }
    #menu-mobile {
        display: none;
        position: fixed;
        justify-content: start;
        align-items: start;
        flex-direction: column;
        gap: 2rem;
        padding-top: 2rem;
        padding-left: 1rem;
        height: 100vh;
        width: 50%;
        z-index: 210;
        background-color: #232323dd;

        ul {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }
    }
    body.red {
        #menu-mobile {
            box-shadow: 1px 0px 5px var(--red);
            border-right: 1px solid var(--red);
        }
    }
    body.green {
        #menu-mobile {
            box-shadow: 1px 0px 5px var(--green);
            border-right: 1px solid var(--green);
        }
    }
    html.light {
        #menu-mobile {
            background-color: #efefefdd;
        }
    }
    @media (width > 666px) {
        #background__menu-mobile {
            &.appear {
                display: none;
            }
            &.expanded ~ #menu-mobile {
                display: flex;
            }
        }
        #menu-mobile {
            display: flex;
            width: fit-content;
            padding-left: 10px;
            padding-right: 10px;
            padding-top: 1rem;
            overflow: hidden;

            svg ~ p {
                display: none;
            }

            &.expanded {
                width: 200px;

                svg ~ p {
                    display: block;
                }
            }
        }
    }
</style>
<script>
    let newWidth = window.innerWidth;
    if (newWidth < 666) {
        const link = document.querySelectorAll(".link-page");

        link.forEach((link) => {
            link.addEventListener("click", () => {
                window.location.href = `/${link.id}`;
            });
        });
    }
</script>