---
import TextLink from "@sections/TextLink.astro";
import FormEmail from "@components/password/FormEmail.astro";
import FormCode from "@components/password/FormCode.astro";
import BackgroundColors from "@components/BackgroundColors.astro";
---

<form-password>
    <h1>Restablecer contraseña</h1>

    <BackgroundColors type="change_password">
        <div id="forms">
            <FormEmail />
            <FormCode />
        </div>
    </BackgroundColors>

    <TextLink
        href="/signin"
        text="¿No tiene una cuenta?"
        textN="Crear cuenta"
    />
</form-password>

<style>
    form-password {
        display: flex;
        flex-direction: column;

        width: 100%;
        min-height: 90dvh;

        h1 {
            text-align: center;
            margin-top: 9.5rem;
            margin-bottom: 2.5rem;
        }

        div#forms {
            position: relative;

            width: auto;
            height: auto;

            overflow: hidden;
            z-index: 1;
            border-radius: 8px;

            background-color: var(--bg-color-dark);

            html.light & {
                background-color: var(--bg-color-light);
            }

            &.send {
                form#form-email {
                    left: -100%;
                }
                form#form-code {
                    left: 0;
                }
            }

            form {
                display: flex;
                flex-direction: column;

                width: 100%;
                height: 255px;

                padding: 20px;
                border-radius: 8px;

                transition: left 0.5s ease;

                p.error {
                    text-align: center;
                    opacity: 0;
                    font-size: 0.935rem;
                    color: var(--red-700);

                    html.light & {
                        color: var(--red);
                    }
                }

                input {
                    border: none;
                    width: 100%;
                    padding: 8px;

                    &:focus {
                        outline: none;
                    }

                    html.light & {
                        background-color: #b8b8b8;
                    }
                }

                span {
                    width: 100%;
                    display: flex;
                }
            }
        }
    }
    @media (width < 525px) {
        form-password {
            h1 {
                margin-top: 4rem;
                margin-bottom: 4.5rem;
            }
        }
    }
</style>

<script>
    import { renderFormsEmail } from "@scripts/password/renderEmailForms";
    import {
        enableSendEmail,
        enableSendCode,
    } from "@scripts/password/handlers";

    class FormPassword extends HTMLElement {
        constructor() {
            super();
            const cacheEmailUser = JSON.parse(
                sessionStorage.getItem("data-user"),
            );
            const emailUser = sessionStorage.getItem("email-user");

            renderFormsEmail(cacheEmailUser, emailUser, this);
            enableSendEmail(this, cacheEmailUser, emailUser);
            enableSendCode(this);
        }
    }

    customElements.define("form-password", FormPassword);
</script>
