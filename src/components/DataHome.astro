---
import TitlesWelcome from "@components/TitlesWelcome.astro";
import ContainerLoaderIcon from "@components/loader/ContainerLoaderIcon.astro";

const token = Astro.cookies.get("dataToken").value;
---

<home-data data-token={token}>
    <ContainerLoaderIcon />

    <TitlesWelcome />

    <section>
        <div>
            <h5>Broker</h5>
            <p id="amount-broker"></p>

            <hr />

            <h5>Último mes</h5>
            <p id="last-month">saldo: 000</p>
        </div>
        <div>
            <h5>Fondo</h5>
            <p id="amount-fund">saldo: 000</p>

            <hr />

            <h5>Última fecha de corte</h5>
            <p id="last-cutoff-date"></p>
        </div>
    </section>
</home-data>
<style>
    home-data {
        width: 100%;
        height: auto;
    }
    section {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;

        width: 99%;
        margin: 0 auto;
        padding: 0 1rem;

        div {
            width: 100%;
            height: auto;

            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;

            padding: 1rem;

            border-radius: 8px;
            border: 1px solid #0f0;

            &:last-child {
                border: 1px solid #f00;
            }

            h5 {
                font-size: 2rem;
                font-weight: 100;
            }
        }
    }
</style>
<script>
    import { getCookieJWT, getUrlsData } from "@scripts/utils";
    import { getAllData } from "@scripts/getData";
    import { setHomePage } from "@scripts/home/renderHome";

    class HomeData extends HTMLElement {
        constructor() {
            super();
        }
        connectedCallback() {
            const token = getCookieJWT();
            const dataToken = JSON.parse(this.dataset.token);

            const urls = getUrlsData(dataToken);

            const hasBroker = dataToken.broker;
            const hasFund = dataToken.fund;

            getAllData(token, urls).then((responses) => {
                setHomePage(hasBroker, hasFund, responses, this);
            });
        }
    }
    customElements.define("home-data", HomeData);
</script>
