---
import CardDataAccount from "@components/data/CardDataAccount.astro";
import BackgroundColors from "@components/BackgroundColors.astro";
import ContainerLoaderIcon from "@components/loader/ContainerLoaderIcon.astro";
---

<astro-data-account>
    <ContainerLoaderIcon />

    <BackgroundColors type="data-account">
        <ul>
            <li>
                <h3>Perfil</h3>
                <CardDataAccount key="Usuario" />
                <CardDataAccount key="Nombre" />
                <CardDataAccount key="Apellidos" />
                <CardDataAccount key="Correo" />
                <CardDataAccount key="Contraseña" />
            </li>
            <li>
                <h3>Configuración</h3>
                <CardDataAccount key="Moneda" />
            </li>
        </ul>
    </BackgroundColors>
</astro-data-account>

<style>
    astro-data-account {
        width: 100%;
        height: 100%;
    }
    ul {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;

        width: 100%;
        height: 100%;

        gap: 1.5rem;
        margin: auto;
        padding: 10px;
        border-radius: 8px;
        z-index: 60;

        background-color: var(--bg-color-dark);

        html.light & {
            background-color: var(--bg-color-light);
        }

        li {
            list-style: none;

            h3 {
                font-weight: 100;
                letter-spacing: 1px;

                body.red & {
                    color: var(--red-600);
                }
                body.green & {
                    color: var(--green-600);
                }
                html.light > body.red & {
                    color: var(--red);
                }
                html.light > body.green & {
                    color: var(--green);
                }
            }
        }
    }
</style>
<script>
    import { getDataUser } from "@scripts/usersAPI";
    import { getCookieJWT } from "@scripts/utils";

    class AstroDataAccount extends HTMLElement {
        constructor() {
            super();
            const $user = this.querySelector("#Usuario p"),
                $name = this.querySelector("#Nombre p"),
                $lastname = this.querySelector("#Apellidos p"),
                $email = this.querySelector("#Correo p");

            const elementsHTML = [$user, $name, $lastname, $email];

            function renderDataAccount(data: Object) {
                const valuesData = Object.values(data) as Object;
                for (let i = 0; i < elementsHTML.length; i++) {
                    const element = elementsHTML[i] as HTMLElement;
                    const value = valuesData[i];
                    element.textContent = value;
                }
            }

            const token = getCookieJWT();

            getDataUser(token).then((data) => renderDataAccount(data));
        }
    }

    customElements.define("astro-data-account", AstroDataAccount);
</script>
