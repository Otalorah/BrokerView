---
import BtnColor from "@components/BtnColor.astro";

interface Props {
    key: string;
    value: string;
}

const { key, value } = Astro.props;

const isPassword = key == "Contrase√±a";
---

<div>
    <h5>{key}</h5>
    <hr />
    {
        isPassword ? (
            <span>
                <input type="password" value={value} readonly />
                <BtnColor text="Cambiar" type="change_password" />
            </span>
        ) : <p>{value}</p>
    }

</div>

<style>
    div {
        position: relative;

        border-radius: 8px;
        padding: 10px;
        margin: 10px;
        background-color: #454545;

        html.light & {
            background-color: #b8b8b8;
        }

        h5 {
            color: #989898;

            html.light & {
                color: #454545;
            }
        }

        hr {
            height: 1px;
            margin-top: 1px;

            background-color: #989898;
            box-shadow: none;
        }

        p {
            color: var(--text-color-dark);

            html.light & {
                color: var(--text-color-light);
            }
        }

        & > span {
            position: relative;
            display: flex;
            justify-content: space-between;
            align-items: center;

            input {
                height: 19px;
                width: min-content;

                border: none;
                color: inherit;
                cursor: default;
                font-size: 1.5rem;
                background-color: transparent;

                &:focus {
                    outline: none;
                }
            }
        }
    }
</style>
<script>
    document.querySelector(".change_password").addEventListener("click", () => {
        console.log("hola");
    });
</script>
