import IconPassword from "@components/IconPassword.astro";

interface Props {
    key: string;
    value: string;
}

const { key, value } = Astro.props;

const isPassword = key == "Contrase√±a" ? true : false;
---

<div>
    <h5>{key}</h5>
    <hr />
    {
        isPassword ? (
            <span>
                <input type="password" value={value} />
                <IconPassword/>
            </span>
        ) : (
            <p>{value}</p>
        )
    }
</spa>

<style>
    div {
        position: relative;

        border-radius: 8px;
        padding: 10px;
        margin: 10px;
        background-color: #454545;

        html.light & {
            background-color: #b8b8b8;
        }

        h5 {
            color: #989898;

            html.light & {
                color: #454545;
            }
        }

        hr {
            height: 1px;
            margin-top: 1px;

            background-color: #989898;
