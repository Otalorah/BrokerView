---
const timeNow = new Date().getHours();

const hourMorning = 0;
const hourAfternoon = 12;
const hourNight = 18;

let text: String;

if (timeNow < hourAfternoon && timeNow >= hourMorning) text = "Buenos dias";
else if (timeNow >= hourAfternoon && timeNow < hourNight)
    text = "Buenas tardes";
else text = "Buenas noches";
---

<h5 id="title">{text}, </h5>
<style>
    h5 {
        width: 100%;

        text-align: center;
        font-weight: 100;
        font-size: 2rem;
        letter-spacing: 5px;

        margin-top: 3rem;
        margin-bottom: 3rem;
    }
</style>
