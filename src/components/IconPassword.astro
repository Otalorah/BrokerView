<style>
    span {
        position: absolute;
        cursor: pointer;

        right: 0.5rem;
        width: 18px;
        height: 18px;

        &.show {
            .no-view {
                opacity: 0;
            }
            .view {
                opacity: 1;
            }
        }

        svg {
            position: absolute;
        }
        .view {
            opacity: 0;
        }
    }
</style>
<script>
    const $passwordIcons = document.querySelectorAll(".password_icon");

    // Show text in input passwords
    const showPassword = (icon, inputPassword) => {
        icon.classList.toggle("show");
        if (inputPassword.type === "password") inputPassword.type = "text";
        else inputPassword.type = "password";
    };

    $passwordIcons.forEach((icon) => {
        icon.addEventListener("click", () => {
            showPassword(icon, icon.previousElementSibling);
        });
    });
</script>
