---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<div>
    <h5>{title}</h5>
    <p>No disponible</p>
</div>

<style>
    div {
        width: 100%;
        height: auto;

        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;

        padding: 1rem;

        border-radius: 8px;
        border: 2px solid #989898;

        box-shadow: 0 0 5px #989898;

        h5 {
            font-size: 2rem;
            font-weight: 100;
        }
    }
</style>
