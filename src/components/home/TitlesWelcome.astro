---
const date = new Date();
const timeNow = parseInt(
    date.toLocaleTimeString("en-US", {
        timeZone: "America/Bogota",
        hour: "2-digit",
        hour12: false,
    }),
);

const hourMorning = 0;
const hourAfternoon = 12;
const hourNight = 18;

let text: String;

if (timeNow < hourAfternoon && timeNow >= hourMorning) text = "Buenos dias";
else if (timeNow >= hourAfternoon && timeNow < hourNight)
    text = "Buenas tardes";
else text = "Buenas noches";
---

<h1 id="title">{text}, </h1>
<style>
    h1 {
        width: 100%;

        text-align: center;
        font-weight: 100;
        font-size: 2.5rem;
        letter-spacing: 5px;

        margin-top: 3rem;
        margin-bottom: 3rem;
    }
</style>
