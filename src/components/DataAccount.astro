---
import CardDataAccount from "@components/CardDataAccount.astro";
import BackgroundColors from "@components/BackgroundColors.astro";

const randomIndex = Math.floor(Math.random() * 10);

const res = await fetch('https://jsonplaceholder.typicode.com/users')
const data = await res.json()
let user = data[randomIndex];

---

<BackgroundColors type="data-account">
    <ul>
        <li>
            <h3>Perfil</h3>
            <CardDataAccount key="Usuario" value={user.username} />
            <CardDataAccount key="Nombre" value={user.name} />
            <CardDataAccount key="Apellidos" value="Rodriguez Martinez" />
            <CardDataAccount key="Correo" value={user.email} />
            <CardDataAccount key="Contrase침a" value="Contrase침a$" />
        </li>
        <li>
            <h3>Configuraci칩n</h3>
            <CardDataAccount key="Moneda" value="USDT" />
            <CardDataAccount key="" value="Cerrar Sesi칩n" />
        </li>
    </ul>
</BackgroundColors>
<style>
    ul {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;

        width: 100%;
        height: 100%;

        gap: 2rem;
        margin: auto;
        padding: 10px;
        border-radius: 8px;
        z-index: 60;

        background-color: var(--bg-color-dark);

        html.light & {
            background-color: var(--bg-color-light);
        }

        li {
            list-style: none;

            h3 {
                font-weight: 100;
                letter-spacing: 1px;

                body.red & {
                    color: var(--red-600);
                }
                body.green & {
                    color: var(--green-600);
                }
                html.light > body.red & {
                    color: var(--red);
                }
                html.light > body.green & {
                    color: var(--green);
                }
            }
        }
    }
</style>
