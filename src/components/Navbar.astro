---
import BtnTheme from "./BtnTheme.astro"
---
<div class="navBar__background">
    <nav class="navBar">
        <div class="navBar__container">
            <BtnTheme client:load/>
        </div>
    </nav>
</div>
<style>
    .navBar__background {
        position: fixed;
        display: flex;
        justify-content: center;
        top: 0;
        left: 0;
        width: 100%;
        height: 55px;
        z-index: 1000;

        &::before {
            content: "";
            position: absolute;
            inset: 0;
            background: repeating-conic-gradient(
                from var(--a),
                #0f0,
                #ff0,
                #0ff,
                #f0f,
                #0ff
            );
            animation: rotating 20s linear infinite;
        }

        &::after {
            content: "";
            position: absolute;
            inset: 0;
            background: repeating-conic-gradient(
                from var(--a),
                #0f0,
                #ff0,
                #0ff,
                #f0f,
                #0ff
            );
            animation: rotating 20s linear infinite;
            filter: blur(5px);
        }
    }
    .navBar {
        position: relative;
        display: flex;
        justify-content: center;
        z-index: 50;
        margin-bottom: 1rem;
        width: 100%;
        height: 53px;
        background-color: #222;

        .navBar__container {
            display: flex;
            justify-content: end;
            align-items: center;
            position: relative;
            margin: auto;
            z-index: 50;
            width: 100%;
            max-width: 1000px;
            height: 40px;
        }
    }
</style>
