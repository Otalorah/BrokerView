---
import BtnColor from "../BtnColor.astro";
import IconForm from "../Icon.astro";

import "src/styles/forms.css";
---

<div class="form__group">
	<label class="form__label" for="user">Usuario:</label>
	<input class="form__input" type="text" id="user" name="user" required />
</div>

<div class="form__group">
	<label class="form__label" for="Password">Contraseña:</label>
	<div class="form__group-input">
		<input
			type="password"
			class="form__input"
			name="password"
			id="password"
			required
		/>
		<IconForm type="no-view"/>
	</div>
	<p class="form__text forget-password">
		<a class="text__link" href="/signin">¿Has olvidado tu contraseña?</a>
	</p>
</div>

<BtnColor text="INGRESAR" />

<script is:inline>
	const $form = document.querySelector(".form"),
		$user = document.getElementById("user"),
		$password = document.getElementById("password");

	$form.addEventListener("submit", (e) => {
		e.preventDefault();

		const objectData = {
			username: $user.value,
			password: $password.value,
		};
		console.log(objectData);
	});
</script>
