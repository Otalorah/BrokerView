---
import BackgroundColors from "@components/BackgroundColors.astro";
---

<h2>Fechas de corte</h2>

<div>
    <select name="cutoff-date" id="cutoff-date"> </select>
</div>

<BackgroundColors type="table-fund">
    <ul id="table-fund">
        <li class="title">Aporte Mes</li>
        <li class="title">Fecha de aporte</li>
        <li class="title">Saldo anterior</li>
        <li class="title">Ganancia</li>
        <li class="title">Saldo actual</li>
    </ul>
</BackgroundColors>

<style>
    h2 {
        text-align: center;
        letter-spacing: 1px;
        font-size: 2rem;
        font-weight: 100;

        margin: 2.5rem 0;
    }
    div {
        width: 95%;
        margin: 0 auto;

        display: flex;
        justify-content: end;

        select {
            color: inherit;
            font-family: inherit;
            font-size: 1rem;

            border: none;

            background-color: var(--bg-color-dark);

            html.light & {
                background-color: var(--bg-color-light);
            }
        }
    }
    ul {
        display: grid;
        grid-template-columns: repeat(5, minmax(50px, 1fr));
        grid-template-rows: 50px;
        grid-auto-rows: 50px;

        width: 100%;
        height: 100%;
        z-index: 1;

        padding: 1rem;
        border-radius: 8px;

        background-color: var(--bg-color-dark);

        html.light & {
            background-color: var(--bg-color-light);
        }

        li {
            text-align: center;
            list-style: none;
            font-weight: 100;
            font-size: 1em;

            align-content: center;

            &.title {
                margin: 0;
                margin-bottom: 0.5rem;
                padding-bottom: 0.5rem;

                border-bottom: 3px solid var(--bg-color-light);

                html.light & {
                    border-bottom: 3px solid var(--bg-color-dark);
                }
            }
        }
    }

    @media (width < 570px) {
        ul {
            font-size: 0.85rem;
        }
    }
    @media (width < 500px) {
        ul {
            font-size: 0.7rem;
        }
    }
</style>
