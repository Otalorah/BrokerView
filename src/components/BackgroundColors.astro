---
const { type } = Astro.props;
---
{
    type == 'navBar' ? 
    <header class=`background ${type}`><slot/></header> 
    : <section class=`background ${type}`><slot /></section>
}


<style>
    .background {
        display: flex;
        justify-content: center;
        align-items: center;

        &.navBar {
            position: fixed;
            height: 55px;
            width: 100%;
            min-width: 300px;
            z-index: 100;
            inset: 0;

            &::after {
                border-radius: 0;
                animation: none;
            }
            &::before {
                border-radius: 0;
                animation: none;
            }
            &:has(div.hamburger_icon){
                padding-left: 33px;
            }
        }

        &.form-login {
            position: relative;
            width: 95%;
            max-width: 400px;
            z-index: 50;
            padding: 3px;
        }

        &.form-signin {
            position: relative;
            width: 95%;
            max-width: 650px;
            z-index: 50;
            padding: 3px;
        }
        &.money {
            position: relative;
            margin-top: 2rem;
            width: 50%;
            height: 100px;
        }
    }
    body.red {
        .background {
            &::before {
                content: "";
                position: absolute;
                inset: 0;
                border-radius: 8px;
                background: repeating-conic-gradient(
                    from var(--a),
                    var(--red),
                    var(--red),
                    var(--red),
                    var(--red),
                    var(--red)
                );
                animation: rotating 20s linear infinite;
            }

            &::after {
                content: "";
                position: absolute;
                inset: 0;
                border-radius: 8px;
                background: repeating-conic-gradient(
                    from var(--a),
                    var(--red-light),
                    var(--red),
                    var(--red-light),
                    var(--red)
                );
                animation: rotating 20s linear infinite;
                filter: blur(5px);
            }
        }
    }
    body.green {
        .background {
            &::before {
                content: "";
                position: absolute;
                inset: 0;
                border-radius: 8px;
                background: repeating-conic-gradient(
                    from var(--a),
                    var(--green),
                    var(--green),
                    var(--green),
                    var(--green),
                    var(--green)
                );
                animation: rotating 20s linear infinite;
            }

            &::after {
                content: "";
                position: absolute;
                inset: 0;
                border-radius: 8px;
                background: repeating-conic-gradient(
                    from var(--a),
                    var(--green-light),
                    var(--green),
                    var(--green-light),
                    var(--green)
                );
                animation: rotating 20s linear infinite;
                filter: blur(5px);
            }
        }
    }
</style>