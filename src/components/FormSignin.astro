<form class="form" id="form__signin">
    <div class="form__group" id="group__user">
        <label class="form__label" for="user">Usuario:</label>

        <div class="form__group-input">
            <input
                type="text"
                class="form__input"
                name="user"
                id="user"
                placeholder="Usuario123"
            />
            <i class="status_icon fas fa-times-circle"></i>
        </div>
    </div>

    <div class="form__group" id="group__lastname">
        <label class="form__label" for="lastname">1° Apellido:</label>
        <div class="form__group-input">
            <input
                type="text"
                class="form__input"
                name="lastname"
                id="lastname"
            />
            <i class="status_icon fas fa-times-circle"></i>
        </div>
    </div>

    <div class="form__group" id="group__lastname2">
        <label class="form__label" for="lastname2">2° Apellido:</label>
        <div class="form__group-input">
            <input
                type="text"
                class="form__input"
                name="lastname2"
                id="lastname2"
            />
            <i class="status_icon fas fa-times-circle"></i>
        </div>
    </div>

    <div class="form__group" id="group__name">
        <label class="form__label" for="name">Nombre:</label>
        <div class="form__group-input">
            <input type="text" class="form__input" name="name" id="name" />
            <i class="status_icon fas fa-times-circle"></i>
        </div>
    </div>

    <div class="form__group" id="group__email">
        <label class="form__label" for="email">Correo:</label>
        <div class="form__group-input">
            <input
                type="email"
                class="form__input"
                name="email"
                id="email"
                placeholder="usuario@gmail.com"
            />
            <i class="status_icon fas fa-times-circle"></i>
        </div>
    </div>

    <div class="form__group" id="group__password">
        <label class="form__label" for="password">Contraseña:</label>
        <div class="form__group-input">
            <input
                type="password"
                class="form__input"
                name="password"
                id="password"
            />
            <i class="password_icon fa-solid fa-eye-slash"></i>
        </div>
        <p class="form__text form__error">
            Más de 6 caracteres, y un carácter especial
        </p>
    </div>

    <div class="form__group" id="group__password_2">
        <label class="form__label" for="password_2">Confirmar contraseña:</label
        >
        <div class="form__group-input">
            <input
                type="password"
                class="form__input"
                name="password_2"
                id="password_2"
            />
            <i class="password_icon fa-solid fa-eye-slash"></i>
        </div>
        <p class="form__text form__error">Las contraseñas no coinciden</p>
    </div>

    <div class="form__group">
        <div class="background__btn">
            <span class="backfill__btn"></span>
            <button class="btn" id="submit" type="submit">CONFIRMAR</button>
        </div>
    </div>
</form>
