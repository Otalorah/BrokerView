---
import TextLink from "src/sections/TextLink.astro";
import Form from "src/sections/Form.astro";
import Layout from "@layouts/Layout.astro";

if (Astro.cookies.get("jwt")) {
    return Astro.redirect("/inicio");
}
---

<Layout title="BrokerView | Registro" hasFooter={true}>
    <main>
        <h1 class="title">Registrarse</h1>

        <Form type="signin" />

        <TextLink
            href="/"
            text="¿Ya tiene una cuenta?"
            textN="Iniciar sesión"
        />
    </main>
</Layout>
<style>
    h1 {
		margin-bottom: 2.5rem;
        margin-top: 4.5rem;
	}
</style>
