---
import Navbar from "@sections/Navbar.astro";
import Footer from "@sections/Footer.astro";

import { ViewTransitions } from "astro:transitions";

import "@styles/global.css";
import "@fontsource/russo-one";

interface Props {
	title: string;
	isForm: boolean | undefined;
}

const { title, isForm } = Astro.props;

const optionsTheme = ["red", "green"];
const randomIndex = Math.floor(Math.random() * optionsTheme.length);
const color = optionsTheme[randomIndex];
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="BrokerView es una plataforma para visualizar datos por medio de graficas y recursos visuales para los usuarios."
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/BrokerLogo.webp" />
		<meta name="generator" content={Astro.generator} />
		<ViewTransitions/>
		<title>{title}</title>
	</head>
	<body class={color}>
		<Navbar isForm={isForm}/>
		<slot />
		{isForm && <Footer />}
	</body>
</html>
